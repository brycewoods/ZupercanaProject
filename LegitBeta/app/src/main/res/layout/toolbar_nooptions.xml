<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbar_nooptions"
        android:layout_width="match_parent"
        android:layout_height="56.0dip"
        android:textAlignment="center"
        android:background="#D9D9D9"
        android:theme="@style/AppTheme_TextCentered">



        <TextView
            android:paddingTop="15dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About You"
            android:textSize="20sp"
            android:gravity="center"/>



    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What Describes.."
        android:layout_gravity="center"
        android:textSize="20sp"
        android:paddingTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press on each category an select which option best suits you!"
        android:textSize="10sp"
        android:layout_gravity="center"
        android:paddingBottom="10dp"/>

    <ListView
        android:id="@android:id/list"
        android:layout_width="386dp"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"/>

    <Button
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_gravity="center_horizontal"
        android:onClick="toDreamMatch"/>

</LinearLayout>