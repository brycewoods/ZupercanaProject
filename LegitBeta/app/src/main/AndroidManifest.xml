<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bryce.legitbeta">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreenActivity"
            android:label="@string/name_splashScreen"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/name_login" />
        <activity
            android:name=".NewLoginActivity"
            android:label="@string/name_newLogin"
            android:theme="@style/AppTheme_NoActionBar" />
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProvider163964170663358"
            android:exported="true" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/util_facebook_id" />

        <activity
            android:name=".StartupSettingsActivity"
            android:label="@string/title_activity_startup_settings"
            android:theme="@style/AppTheme_NoActionBar" />
        <activity
            android:name=".DiscoverySettings"
            android:label="@string/title_activity_discovery_settings" />
        <activity
            android:name=".AboutYouActivity"
            android:label="@string/title_activity_about_you" />
        <activity
            android:name=".YourMatchActivity"
            android:label="@string/title_activity_your_match"></activity>
    </application>

</manifest>
